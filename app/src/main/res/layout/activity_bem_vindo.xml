<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/telaBemVindo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="boletimescolar.br.edu.ifpi.boletimescolar.BemVindo"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/bemVindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem Vindo(a),"
        android:textSize="20dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Cadastrar Escola"
        android:gravity="center"
        android:textSize="20dp"
        android:onClick="cadastrarEscola"
        android:drawableLeft="@drawable/book"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:paddingBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Ver Escolas"
        android:textSize="20dp"
        android:drawableLeft="@drawable/lupa"
        android:gravity="center"
        android:onClick="verEscolas"
        android:textColor="@android:color/black"
        />

</LinearLayout>
