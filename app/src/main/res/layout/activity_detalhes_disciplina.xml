<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="boletimescolar.br.edu.ifpi.testeboletimescolar.DetalhesDisciplina"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/nomeDisciplina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text=""
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quatidade de provas :"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/quantProvasExibir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notas"
            android:textColor="@android:color/black"/>

        <ListView
            android:id="@+id/list_notas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/listaNotas"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <TextView
        android:id="@+id/mediaPretendidaTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/provaFinalTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/mediaFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/observacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/butaoNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar Notas"
        android:onClick="cadastrarNotas"/>

    <Button
        android:id="@+id/provaFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Prova Final"
        android:visibility="gone"
        android:onClick="provaFinal"/>

</LinearLayout>
